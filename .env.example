# Server
PORT=3100
API_KEY=change-me-to-a-random-secret

# Google Drive
GOOGLE_SERVICE_ACCOUNT_PATH=/opt/drive-cache/credentials/service-account.json
GOOGLE_DRIVE_FOLDER_ID=your-shared-folder-id-here

# Cache
CACHE_DIR=/opt/drive-cache/data
MANIFEST_PATH=/opt/drive-cache/data/manifest.json
PAGE_TOKEN_PATH=/opt/drive-cache/data/.page-token

# Polling (fallback interval in ms)
POLL_INTERVAL=30000

# Webhook (optional - set if you have a public URL)
# WEBHOOK_URL=https://your-server.example.com/webhook/drive
